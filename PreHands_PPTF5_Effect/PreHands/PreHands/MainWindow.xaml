<Window x:Class="PreHands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" 
        xmlns:Controls="clr-namespace:Coding4Fun.Kinect.Wpf.Controls;assembly=Coding4Fun.Kinect.Wpf" 
        xmlns:local="clr-namespace:PreHands"
        Closing="Window_Closing" 
        Title="EFFECTIVE MOTION CONTROL [Pre Hands]" Height="600" Width="800" Loaded="Window_Loaded" 
        WindowState="Maximized"
        >
   
    <Canvas Name="MainCanvas" >
        <my:KinectColorViewer Stretch="UniformToFill" Canvas.Left="0" Canvas.Top="0" Width="800" Height="600" Name="kinectColorViewer1" 
                              Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" >
        </my:KinectColorViewer>

        <Ellipse Canvas.Left="0" Canvas.Top="0" Height="50" Name="leftEllipse"  Width="50" Fill="#FF4D298D" Opacity="1" Stroke="White" />
        <Ellipse Canvas.Left="100" Canvas.Top="0" Fill="#FF2CACE3" Height="50" Name="rightEllipse" Width="50" Opacity="1" Stroke="White" />
        <my:KinectSensorChooser Canvas.Left="250" Canvas.Top="380" Name="kinectSensorChooser1" Width="328" />
        <Image Canvas.Left="66" Canvas.Top="90" Height="87" Name="headImage" Stretch="Fill" Width="84" Source="/Images/Face.png" />


        <Button Name="SettingsButton" Margin="750 0 0 0" VerticalAlignment="Stretch" Canvas.Right="0" Height="{Binding Source={x:Static SystemParameters.FullPrimaryScreenHeight}}"  Width="45" MouseEnter="OnShowSettings" MouseLeave="OnHideSettings">
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                               Storyboard.TargetName="SettingsButton" 
                               Storyboard.TargetProperty="(Button.Width)"
                               From="45" 
                               To="220" 
                               Duration="0:0:0.5" />
                            <DoubleAnimation 
                                Storyboard.TargetName="SettingsControl" 
                                Storyboard.TargetProperty="(local:SettingsControl.Width)"
                                From="0"
                                To="220" 
                                Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                               Storyboard.TargetName="SettingsButton" 
                               Storyboard.TargetProperty="(Button.Width)"
                               From="220" 
                               To="45" 
                               Duration="0:0:0.5" />
                            <DoubleAnimation 
                                Storyboard.TargetName="SettingsControl" 
                                Storyboard.TargetProperty="(local:SettingsControl.Width)"
                                To="0" 
                                Duration="0:0:0.4" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
            <StackPanel>
                <TextBlock  Name="setting_title" Height="19" HorizontalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <TransformGroup>
                            <RotateTransform Angle="270" />
                        </TransformGroup>
                    </TextBlock.LayoutTransform>
                        Settings
                </TextBlock>
                <Image Name ="setting_img" Source="Images\Settings-icon.png" Width="33" Height="33" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                <local:SettingsControl Margin="0,0,0,0" x:Name="SettingsControl" HorizontalAlignment="Right" VerticalAlignment="Stretch" Settings="{Binding Settings}"  Width="213" RenderTransformOrigin="0.484,0.525" Height="{Binding Source={x:Static SystemParameters.FullPrimaryScreenHeight}}" Visibility="Collapsed"/>
            </StackPanel>
        </Button>
        
    </Canvas>
</Window>
